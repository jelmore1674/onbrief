{
	"build": {
		"beforeDevCommand": "yarn dev",
		"beforeBuildCommand": "yarn build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "onbrief",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"fs": {
				"all": true,
				"scope": ["$APPDATA/**", "$DATA/**"]
			},
			"shell": {
				"all": false,
				"open": true
			},
			"http": {
				"all": true,
				"request": true,
				"scope": ["https://*"]
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "dev.justinelmore.onbrief",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self' https://server1.onair.company"
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": false,
				"title": "onbrief",
				"width": 800,
				"height": 600
			}
		]
	}
}
